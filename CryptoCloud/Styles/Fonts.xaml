<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <!-- Workable -->
    <FontFamily x:Key="JetbrainsMonoRegular">pack://application,,,/Fonts/#JetBrains Mono</FontFamily>
    <FontFamily x:Key="SfProTextRegular">pack://application,,,/Fonts/#Sf Pro Text</FontFamily>
    <FontFamily x:Key="InterRegular">pack://application,,,/Fonts/#Inter 18pt</FontFamily>

    <!-- Sizes -->
    <system:Double x:Key="FontSizeSmaller">10</system:Double>
    <system:Double x:Key="FontSizeSmall">12</system:Double>
    <system:Double x:Key="FontSizeRegular">14</system:Double>
    <system:Double x:Key="FontSizeLargerRegular">16</system:Double>
    <system:Double x:Key="FontSizeMedium">18</system:Double>
    <system:Double x:Key="FontSizeLarge">20</system:Double>
    <system:Double x:Key="FontSizeXLarge">24</system:Double>
    <system:Double x:Key="FontSizeXXLarge">30</system:Double>
    <system:Double x:Key="FontSizeXXXLarge">45</system:Double>
    
    <!-- Global -->
    <Style TargetType="{x:Type TextBlock}" x:Key="BaseTextBlockStyle">
        <!--<Setter Property="FontFamily" Value="{StaticResource LucidaConsoleRegular}"/>-->
        <Setter Property="FontSize" Value="{StaticResource FontSizeRegular}" />
    </Style>
    
</ResourceDictionary>