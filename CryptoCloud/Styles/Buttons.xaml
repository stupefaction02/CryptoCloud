<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="{x:Type Button}" x:Key="Hoverless">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                        <TextBlock VerticalAlignment="Center" 
                                   HorizontalAlignment="Center" Text="{TemplateBinding Content}" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Override template -->
    <Style x:Key="Default" TargetType="{x:Type Button}">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Background" Value="{StaticResource ThirdPanelBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource SecondTextBlockBrush}"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ButtonBase}">
                    <Border x:Name="border" Background="{TemplateBinding Background}" 
                            CornerRadius="{TemplateBinding Border.CornerRadius}"
                            BorderThickness="0" 
                            Height="{TemplateBinding Height}"
                            SnapsToDevicePixels="true">
                        <TextBlock x:Name="contentPresenter" 
                                          Focusable="False"
                                          FontWeight="Bold"
                                          FontSize="{StaticResource FontSizeRegular}"
                                          Text="{TemplateBinding Content}"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          Margin="{TemplateBinding Padding}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter Property="Background" TargetName="border"
                                    Value="Red"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="25RoundedButton" TargetType="{x:Type Button}" BasedOn="{StaticResource Default}">
        <Setter Property="Border.CornerRadius" Value="25" />
    </Style>

    <Style x:Key="BlueGradientButton" TargetType="{x:Type Button}" BasedOn="{StaticResource Default}">
        <Setter Property="Border.CornerRadius" Value="25" />

        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0.5,1" EndPoint="0.5,0">
                    <GradientStop Color="#2886F1" Offset="0" />
                    <GradientStop Color="#589DEC" Offset="1" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="LoginWithGoogleButton" TargetType="{x:Type Button}">
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background" Value="{StaticResource ThirdPanelBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource SecondTextBlockBrush}"/>
        <Setter Property="BorderBrush" Value="#45454A"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ButtonBase}">
                    <Border x:Name="border" 
                            Height="{TemplateBinding Height}"
                            Background="{TemplateBinding Background}" 
                            CornerRadius="25"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}" 
                            SnapsToDevicePixels="true">
                        <Border Padding="10,14,10,15">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Image 
                                    Width="20"
                                    Height="20"
                                    Margin="0,0,10,0"
                                    Source="pack://application:,,,/Images/123.png"/>
                                <TextBlock x:Name="contentPresenter" 
                                          Focusable="False"
                                          FontWeight="Medium"
                                          LineHeight="20px"
                                          FontSize="{StaticResource FontSizeRegular}"
                                          Text="{TemplateBinding Content}"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                />
                            </StackPanel>
                        </Border>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter Property="Background" TargetName="border"
                            Value="Red"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="LinkDiskButton" TargetType="{x:Type Button}">
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background" Value="{StaticResource ThirdPanelBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource SecondTextBlockBrush}"/>
        <Setter Property="BorderBrush" Value="#45454A"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ButtonBase}">
                    <Border x:Name="border" 
                        Height="{TemplateBinding Height}"
                        Width="{TemplateBinding Width}"
                        SnapsToDevicePixels="true">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            
                            <Border Padding="30,15,15,15" 
                                    Grid.Column="0"
                                    Background="{TemplateBinding Background}" 
                                    CornerRadius="25,0,0,25">
                                <TextBlock x:Name="contentPresenter" 
                                      Focusable="False"
                                      FontWeight="Bold"
                                      LineHeight="20px"
                                      FontSize="{StaticResource FontSizeRegular}"
                                      Text="{TemplateBinding Content}"
                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            </Border>

                            <Border 
                                Grid.Column="1"
                                CornerRadius="0,25,25,0" 
                                BorderBrush="White"
                                BorderThickness="1,0,0,0"
                                Background="{TemplateBinding Background}" >
                                <Image 
                                    Width="20"
                                    Height="20"
                                    Margin="0,0,10,0"
                                    Source="pack://application:,,,/Images/LinkDiskButtonIcon.png"/>
                            </Border>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter Property="Background" TargetName="border"
                        Value="Red"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="DropDownButton" TargetType="{x:Type Button}">
        <Setter Property="Height" Value="50"/>
        <Setter Property="Foreground" Value="White"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ButtonBase}">
                    <Border x:Name="border" 
                          Height="{TemplateBinding Height}"
                          Background="{TemplateBinding Background}" 
                          CornerRadius="25"
                          SnapsToDevicePixels="true">
                        <Border Padding="10,15,10,15">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock x:Name="contentPresenter" 
                                        Focusable="False"
                                        FontWeight="Bold"
                                        LineHeight="20px"
                                        FontFamily="Inter"
                                         Foreground="White"
                                        Margin="0,4,8,0"
                                        FontSize="{StaticResource FontSizeRegular}"
                                        Text="{TemplateBinding Content}"
                                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                <Image 
                                      Width="16"
                                      Height="16"
                                      Margin="0,0,10,0"
                                      Source="pack://application:,,,/Images/DropDownButtonIcon.png"/>
                            </StackPanel>
                        </Border>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Fonts.xaml"/>
        <ResourceDictionary Source="Colors.xaml"/>
    </ResourceDictionary.MergedDictionaries>

</ResourceDictionary>