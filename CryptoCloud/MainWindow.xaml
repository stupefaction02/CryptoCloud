<Window x:Class="CryptoCloud.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:CryptoCloud.Views"
        xmlns:diskFilesViews="clr-namespace:CryptoCloud.Views.DiskFiles"
        xmlns:local="clr-namespace:CryptoCloud"
        xmlns:viewModels="clr-namespace:CryptoCloud.ViewModels" 
        xmlns:converters="clr-namespace:CryptoCloud.Converters" 
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:ap="clr-namespace:CryptoCloud.AttachedProperties"
        mc:Ignorable="d"
        x:Name="window"
        DataContext="{Binding Source={StaticResource viewModelLocator}, Path=MainWindowViewModel}"
        Title="CryptoCloud" Height="650" Width="1640">
    <Window.Resources>

        <converters:VisibilityConverter x:Key="VisibilityConverter" />

        <Style x:Key="123" TargetType="{x:Type local:MainWindow}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type local:MainWindow}">
                        <Border Padding="{Binding OuterMarginSize}">
                            <Grid>
                                <Border x:Name="infoBar"
                                    Panel.ZIndex="5"
                                    Margin="0 410 0 0"
                                        VerticalAlignment="Center"
                                        Visibility="{Binding InfoBar}">
                                    <TextBlock TextAlignment="Center"
                                           VerticalAlignment="Center"
                                               Foreground="White" 
                                               FontSize="{StaticResource FontSizeRegular}"
                                               Text="{Binding InfoMessage.Text}"/>
                                    <Border.Background>
                                        <SolidColorBrush Color="{Binding InfoMessage.ColorCodeHex}"/>
                                    </Border.Background>

                                    <Border.Style>
                                        <Style>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RunInfoBarAnimation}" Value="True">
                                                    <DataTrigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation
                                                                To="20" From="0"
                                                                Storyboard.TargetProperty="Height"
                                                                AutoReverse="False"
                                                                Duration="0:0:1.45"
                                                            />
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </DataTrigger.EnterActions>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding HideInfoBar}" Value="True">
                                                    <DataTrigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation
                                                                To="0" From="20"
                                                                Storyboard.TargetProperty="Height"
                                                                AutoReverse="False"
                                                                Duration="0:0:1.45"
                                                            />
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </DataTrigger.EnterActions>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>

                                <Border BorderThickness="1"
                                    BorderBrush="#4D004D"
                                    Panel.ZIndex="2" />

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="{Binding TitleHeightLength}"/>
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <!-- Header Bar -->
                                    <DockPanel LastChildFill="False" Background="#000000" Grid.Row="0">
                                        <Button DockPanel.Dock="Left" Style="{StaticResource SystemIcon}" 
                                                Command="{Binding MenuCommand}">
                                        </Button>

                                        <Button Width="30" Height="30" BorderThickness="0" DockPanel.Dock="Left">
                                            <Button.Background>
                                                <ImageBrush ImageSource="pack://application:,,,/Images/icon.ico"/>
                                            </Button.Background>
                                        </Button>

                                        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                                            <Button Width="40" Command="{Binding Minimize}" Content="_" Style="{StaticResource WindowControlButton}"/>
                                            <Button Width="40" Command="{Binding Close}" Content="X" Style="{StaticResource WindowCloseButton}"/>
                                        </StackPanel>
                                    </DockPanel>

                                    <!-- Page Content -->
                                    <Border Grid.Row="1" Background="#333333">
                                        <ContentPresenter Content="{TemplateBinding Content}"/>
                                    </Border>


                                </Grid>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Canvas>
            <UserControl x:Name="viewSwitch" 
                         Background="#16171D"
                         Width="{Binding ElementName=window, Path=ActualWidth}"
                         Height="{Binding ElementName=window, Path=ActualHeight}"
                         HorizontalAlignment="Center" VerticalAlignment="Center"
                         DataContext="{Binding ContentViewModel.CurrentContent}" 
                         Padding="16,16,16,0">
                <UserControl.Style>
                    <Style TargetType="{x:Type UserControl}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding NavigationId}" Value="LinkDiskViewModel">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <views:LinkDIskView />
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>

                            <DataTrigger Binding="{Binding NavigationId}" Value="LoginViewModel">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <views:LoginView Width="780" Height="650" />
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>

                            <DataTrigger Binding="{Binding NavigationId}" Value="MainViewModel">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <views:MainView />
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </UserControl.Style>
            </UserControl>

            <Border Height="80" 
                    Canvas.Top="-80" 
                    Canvas.Left="0"
                ap:AnimationAttachedProperties.StartSlideFromScreenTopAnimation="{Binding Path=ToggleFileInfoPopup}">
                <diskFilesViews:FilePopup 
                          x:Name="fileInfoPopup" 
                          Height="80" 
                          Visibility="Collapsed"
                          Width="{Binding ElementName=window, Path=ActualWidth}">
                    <!--<i:Interaction.Triggers>
                    <DataTrigger Binding="{Binding ToggleFileInfoPopup}" Value="True">
                        <DataTrigger.EnterActions>
                            <BeginStoryboard>
                                <Storyboard Timeline.DesiredFrameRate="60">
                                    <DoubleAnimation Storyboard.TargetName="ball" Storyboard.TargetProperty="(Canvas.Top)"
                         From="-80" To="0" AutoReverse="True" Duration="0:0:2.5"
                         DecelerationRatio="1"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </DataTrigger.EnterActions>
                    </DataTrigger>
                </i:Interaction.Triggers>-->
                </diskFilesViews:FilePopup>
            </Border>
        </Canvas>
    </Grid>
</Window>
