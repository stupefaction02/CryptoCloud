<UserControl x:Class="CryptoCloud.Views.DiskFiles.FilePopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CryptoCloud.Views.DiskFiles"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="800">
    <Border Width="Auto"
            Padding="15,0,15,0"
        CornerRadius="0,0,35,35" 
        Background="#1B1C21" 
        BorderThickness="0,0,1,1" 
        BorderBrush="#222329">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <Button Style="{StaticResource InfoButton}"
                        Content="Инфо"
                        Width="97" 
                        Height="40" 
                        Margin="0,0,20,0"/>
                <TextBlock Text="{Binding SelectedFile.Title, FallbackValue=FileName}"
                           FontSize="{StaticResource FontSizeXXLarge}"
                           Foreground="White"
                           FontWeight="Bold"
                           LineHeight="38"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                <Button Content="Скачать"
                        Style="{StaticResource DownloadButton}"
                        Width="116" 
                        Height="40" 
                        Margin="0,0,22,0"/>
                <Button Content="Скачать"
                        Style="{StaticResource RemoveButton}"
                        Width="116" 
                        Height="40"
                        Margin="0,0,22,0"/>
                <Image Width="16"
                        Height="16"
                        Source="pack://application:,,,/Images/x.png">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseDoubleClick">
                            <i:InvokeCommandAction
                            Command="{Binding DoubleCommand}"
                            CommandParameter="{Binding SelectedPhone}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Image>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
