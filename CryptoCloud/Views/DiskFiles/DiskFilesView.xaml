<UserControl x:Class="CryptoCloud.Views.DiskFilesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CryptoCloud.Views"
             xmlns:models="clr-namespace:CryptoCloud.Models"
             xmlns:diskFilesViews="clr-namespace:CryptoCloud.Views.DiskFiles"
             xmlns:controls="clr-namespace:CryptoCloud.UserControls"
             xmlns:converters="clr-namespace:CryptoCloud.Converters"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             DataContext="{Binding Source={StaticResource viewModelLocator}, Path=DiskFilesViewModel}"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <DataTemplate DataType="{x:Type models:DiskFileModel}">
            <!--<TextBlock Style="{StaticResource RegularMediumWhite}" Text="{Binding Name}"/>-->

            <controls:DiskFileItemView x:Name="fileItem" DataContext="{Binding Model}" Width="160" Height="179" />
        </DataTemplate>

        <DataTemplate DataType="{x:Type models:DiskFolderModel}">
            <controls:DiskFolderItemView x:Name="folderItem" DataContext="{Binding Model}" Width="160" Height="179" />
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <StackPanel Width="Auto" Orientation="Vertical">
            <Grid Height="50" Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="{Binding DiskOwner, FallbackValue=DiskOwner}"
                   Grid.Column="0"
                   VerticalAlignment="Center"
                   FontWeight="DemiBold" 
                   Foreground="#FFFFFF"
                   Margin="0,0,10,0"
                   LineHeight="30"
                   FontSize="{StaticResource FontSizeLarge}" />

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="По названию" 
                    Width="150" 
                    Height="50" 
                    Margin="0,0,10,0"
                    FontWeight="Medium"
                    Style="{StaticResource DropDownButton}" />
                    <Button Width="76" 
                    Height="50" 
                    Style="{StaticResource DropDownzzWithIconButton}" />
                </StackPanel>
            </Grid>

            <Grid>
                <StackPanel Orientation="Vertical" Margin="0,0,0,30" HorizontalAlignment="Left">
                    <Button Content="Последние" 
                        Width="150" 
                        HorizontalAlignment="Left"
                        Height="50" 
                        Margin="0,0,0,10"
                        FontWeight="Medium"
                        Style="{StaticResource DropDownButton}" />
                    <ItemsControl x:Name="recentFiles" 
                                  ItemsSource="{Binding RecentFiles}"
                              Background="Transparent">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type models:DiskFileItemModel}">
                                <ContentControl Content="{Binding}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <StackPanel Visibility="Collapsed" Orientation="Vertical" HorizontalAlignment="Left">
                    <Button Content="Все файлы" 
                            Width="150" 
                            Height="50" 
                            HorizontalAlignment="Left"
                            Margin="0,0,0,10"
                            FontWeight="Medium"
                            Style="{StaticResource DropDownButton}" />
                    <ItemsControl x:Name="allFiles" 
                      Height="Auto" 
                      ItemsSource="{Binding AllFiles}"
                      Background="Transparent">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </StackPanel>
            </Grid>
        </StackPanel>

        <Canvas>
            <Button Style="{StaticResource UploadFileButton}"
                    Content="Загрузить файлы"
                    Command="{Binding DownloadFilesCommand}"
                    Background="#2886F1"
                    Canvas.Bottom="40"
                    Canvas.Right="40"
                    Width="209" 
                    Height="50" />

            <diskFilesViews:FilesEncryptionProgressInfo x:Name="filesEncryptionProgressInfo"
                                                        Width="400" 
                                                        Height="240"
                                                        Canvas.Bottom="0"
                                                        Canvas.Right="16"/>
        </Canvas>
    </Grid>
</UserControl>
