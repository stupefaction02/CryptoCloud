<UserControl x:Class="CryptoCloud.Views.DiskFilesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CryptoCloud.Views"
             xmlns:controls="clr-namespace:CryptoCloud.UserControls"
             mc:Ignorable="d" 
             DataContext="{Binding Source={StaticResource viewModelLocator}, Path=DiskFilesViewModel}"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <DataTemplate x:Key="DiskFilesItemTemplate">
            <UserControl Width="160" Height="179">
                <UserControl.Style>
                    <Style TargetType="{x:Type UserControl}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Type}" Value="folder">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <controls:DiskFolderItemView DataContext="{Binding Model}" Width="160" Height="179" />
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>

                            <DataTrigger Binding="{Binding Type}" Value="file">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <controls:DiskFileItemView DataContext="{Binding Model}" Width="160" Height="179" />
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>

                            <DataTrigger Binding="{Binding Type}" Value="addFile">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <Border Width="250" 
                        Height="350"
                        CornerRadius="30"
                        Background="#222329">
                                            <StackPanel VerticalAlignment="Center"
                                HorizontalAlignment="Center">
                                                <Image 
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                                Width="100"
                                Height="100"
                                Margin="0,0,0,20"
                                Source="pack://application:,,,/Images/BigPlus.png"/>
                                                <TextBlock Text="Добавить диск" 
                                   Foreground="#707383"
                                   FontWeight="Bold" 
                                   LineHeight="30"
                                   FontSize="{StaticResource FontSizeLarge}" />
                                            </StackPanel>
                                        </Border>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </UserControl.Style>
            </UserControl>
        </DataTemplate>

        <CollectionViewSource
            x:Key="PeopleViewSource"
            IsSourceGrouped="True"
            Source="{x:Bind ViewModel.Contacts, Mode=OneWay}" />
    </UserControl.Resources>
    
    <StackPanel Width="Auto" Orientation="Vertical">
        <Grid Height="50" Margin="0,0,0,46">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="{Binding DiskOwner, FallbackValue=DiskOwner}"
                   Grid.Column="0"
                   VerticalAlignment="Center"
                   FontWeight="DemiBold" 
                   Foreground="#FFFFFF"
                   Margin="0,0,10,0"
                   LineHeight="30"
                   FontSize="{StaticResource FontSizeLarge}" />

            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <Button Content="По названию" 
                    Width="150" 
                    Height="50" 
                    Margin="0,0,10,0"
                    FontWeight="Medium"
                    Style="{StaticResource DropDownButton}" />
                <Button Width="76" 
                    Height="50" 
                    Style="{StaticResource DropDownzzWithIconButton}" />
            </StackPanel>
        </Grid>

        <!--<controls:DiskFolderItemView Width="160" Height="179" />-->
        <!--<controls:DiskFileItemView Width="160" Height="179" />-->

        <ListView x:Name="diskFiles" 
                      Height="1000" 
                  Background="Transparent"
                      ItemTemplate="{DynamicResource DiskFilesItemTemplate}">
            
            <ListView.GroupStyle>
                <GroupStyle HidesIfEmpty="True">

                    <!--  Header template (you can see IReadOnlyObservableGroup being used here)  -->
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock
                                FontSize="24"
                                Text="{Binding Name}" />
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                </GroupStyle>
            </ListView.GroupStyle>

            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ListView>
    </StackPanel>
</UserControl>
