<UserControl x:Class="CryptoCloud.Views.MainHeaderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CryptoCloud.Views" 
             xmlns:viewmodels="clr-namespace:CryptoCloud.ViewModels" 
             d:DataContext="{d:DesignInstance Type=viewmodels:LinkDiskHeaderViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border 
        Height="80"
        Background="#1B1C21"
        BorderBrush="#222329"
        CornerRadius="35"
        BorderThickness="1"
        Padding="14">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <Button Width="197" Content="Диск - Степан01">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource DropDownButton}">
                            <Setter Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0.5,1" EndPoint="0.5,0">
                                        <GradientStop Color="#589DEC" Offset="0" />
                                        <GradientStop Color="#2886F1" Offset="1" />
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Column="2">
                <!--<TextBox />-->
                <Image 
                    Width="30"
                    Height="30"
                    Margin="0,0,20,0"
                    Source="pack://application:,,,/Images/NotificationIcon.png"/>
                <Image />

                <Border 
                    Width="50"
                    Height="50"
                    Margin="0,0,20,0"
                    CornerRadius="20"
                    Background="#9747FF">
                    <Image 
                        Width="18.025976181030273" 
                        Height="23.5128173828125"
                        Source="pack://application:,,,/Images/AvatarPlaceholder.png"/>
                </Border>

                <Button Width="140" 
                        Height="50"
                        Margin="0,0,10,0"
                        Style="{StaticResource PremiumButton}"
                        Content="Премиум">
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
